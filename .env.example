# PrivilegeGuard — Environment Variables
# Copy this to .env and fill in your values.
# NEVER commit .env to source control.

# Azure Function App (set automatically in Azure, needed only for local dev)
AzureWebJobsStorage=UseDevelopmentStorage=true
FUNCTIONS_WORKER_RUNTIME=python

# ZSP Gateway — NHI Backup Demo
BACKUP_SP_OBJECT_ID=<backup-sp-object-id>
KEYVAULT_RESOURCE_ID=/subscriptions/<sub-id>/resourceGroups/<rg>/providers/Microsoft.KeyVault/vaults/<kv-name>
STORAGE_RESOURCE_ID=/subscriptions/<sub-id>/resourceGroups/<rg>/providers/Microsoft.Storage/storageAccounts/<storage-name>

# Audit Logging — Azure Monitor Ingestion
DCE_ENDPOINT=https://<dce-name>.<region>.ingest.monitor.azure.com
DCR_RULE_ID=dcr-<guid>
DCR_STREAM_NAME=Custom-ZSPAudit_CL

# Scheduled Backup Job
BACKUP_JOB_SCHEDULE=0 55 1 * * *
BACKUP_JOB_DURATION_MINUTES=35

# Safety guardrail
MAX_DURATION_MINUTES=480

# Entra ID Groups (set by deployment script)
INTUNE_ADMIN_GROUP_ID=<group-object-id>
SECURITY_READER_GROUP_ID=<group-object-id>
